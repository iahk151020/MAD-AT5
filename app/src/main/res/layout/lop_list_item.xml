<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_lop_item_ma_lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CS123"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_lop_item_ten_lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operating System"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_lop_item_ma_lop"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_lop_mo_ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_lop_item_ten_lop"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>