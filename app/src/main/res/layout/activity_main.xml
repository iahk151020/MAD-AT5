<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_them_sinh_vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="Thêm sinh viên"/>

    <Button
        android:id="@+id/btn_danh_sach_sinh_vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách sinh viên"
        app:layout_constraintTop_toBottomOf="@+id/btn_them_sinh_vien"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_them_lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm lớp"
        app:layout_constraintTop_toBottomOf="@+id/btn_danh_sach_sinh_vien"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_danh_sach_lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách lớp"
        app:layout_constraintTop_toBottomOf="@+id/btn_them_lop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>